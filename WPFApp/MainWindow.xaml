<Window
    x:Class="WPFApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:WPFApp.Pages"
    Title="MainWindow"
    Width="1920"
    Height="1080"
    Left="0"
    Top="0"
    WindowStartupLocation="Manual"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Canvas x:Name="canvas">
        <Canvas.Background>
            <ImageBrush ImageSource="Resources/MainWindowBG.jpg" />
        </Canvas.Background>

        <pages:MainMenuPage x:Name="MainMenuPage" Visibility="Visible" />
        <pages:NewComponentPage x:Name="NewComponentPage" Visibility="Hidden" />
        <pages:SavedBuildsPage x:Name="SavedBuildsPage" Visibility="Hidden" />
        <pages:NewBuildPage x:Name="NewBuildPage" Visibility="Hidden" />
    </Canvas>
</Window>
