<main:ObservableUserControl
    x:Class="WPFApp.Pages.NewBuildPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Pages"
    xmlns:main="clr-namespace:WPFApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1920"
    Height="1080"
    mc:Ignorable="d">
    <Canvas>
        <local:SelectCPUPage x:Name="SelectCPUPage" Visibility="Hidden" />
        <local:SelectGPUPage x:Name="SelectGPUPage" Visibility="Hidden" />
        <local:SelectMBPage x:Name="SelectMBPage" Visibility="Hidden" />
        <local:SelectRAMPage x:Name="SelectRAMPage" Visibility="Hidden" />
        <local:SelectPSPage x:Name="SelectPSPage" Visibility="Hidden" />
        <local:SelectPCCasePage x:Name="SelectPCCasePage" Visibility="Hidden" />
        <local:SelectStoragePage x:Name="SelectStoragePage" Visibility="Hidden" />
        <local:SelectCPUCoolerPage x:Name="SelectCPUCoolerPage" Visibility="Hidden" />

        <Canvas
            x:Name="NewBuild"
            Width="1920"
            Height="1080"
            Visibility="Visible">
            <Canvas.Background>
                <ImageBrush ImageSource="../Resources/NewBuildBG.jpg" />
            </Canvas.Background>
            <Label
                x:Name="TextBoxCPU"
                Canvas.Left="777"
                Canvas.Top="335"
                Width="368"
                Height="204"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#66000000"
                Canvas.ZIndex="1"
                Content="CPU"
                FontFamily="Bahnschrift"
                FontSize="36"
                Foreground="White"
                MouseDown="TextBoxCPU_MouseDown" />
            <Label
                x:Name="TextBoxGPU"
                Canvas.Left="491"
                Canvas.Top="685"
                Width="751"
                Height="109"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#64000000"
                Canvas.ZIndex="1"
                Content="GPU"
                FontFamily="Bahnschrift"
                FontSize="48"
                Foreground="White"
                MouseDown="TextBoxGPU_MouseDown"
                RenderTransformOrigin="0.483,0.027" />
            <Label
                x:Name="TextBoxRAM"
                Canvas.Left="1339"
                Canvas.Top="164"
                Width="255"
                Height="459"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#64000000"
                Canvas.ZIndex="1"
                Content="RAM"
                FontFamily="Bahnschrift"
                FontSize="48"
                Foreground="White"
                MouseDown="TextBoxRAM_MouseDown"
                RenderTransformOrigin="0.483,0.027" />
            <Label
                x:Name="TextBoxMB"
                Canvas.Left="87"
                Canvas.Top="649"
                Width="375"
                Height="270"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#66000000"
                Canvas.ZIndex="1"
                Content="MBoard"
                FontFamily="Bahnschrift Light"
                FontSize="48"
                Foreground="White"
                MouseDown="TextBoxMB_MouseDown"
                RenderTransformOrigin="0.943,0.792" />
            <Label
                x:Name="TextBoxCC"
                Canvas.Left="526"
                Canvas.Top="126"
                Width="245"
                Height="133"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#66000000"
                Canvas.ZIndex="1"
                Content="CPUCooler"
                FontFamily="Bahnschrift"
                FontSize="36"
                Foreground="White"
                MouseDown="TextBoxCC_MouseDown" />
            <Label
                x:Name="TextBoxPCCase"
                Canvas.Left="10"
                Canvas.Top="11"
                Width="376"
                Height="218"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#66000000"
                Canvas.ZIndex="1"
                Content="PCCase"
                FontFamily="Bahnschrift"
                FontSize="36"
                Foreground="White"
                MouseDown="TextBoxPCCase_MouseDown" />
            <Label
                x:Name="TextBoxStorage"
                Canvas.Left="1374"
                Canvas.Top="671"
                Width="502"
                Height="234"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#66000000"
                Canvas.ZIndex="1"
                Content="Storage"
                FontFamily="Bahnschrift"
                FontSize="36"
                Foreground="White"
                MouseDown="TextBoxStorage_MouseDown" />
            <Label
                x:Name="TextBoxPowerSupply"
                Canvas.Left="87"
                Canvas.Top="335"
                Width="502"
                Height="184"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#66000000"
                Canvas.ZIndex="1"
                Content="Power Supply"
                FontFamily="Bahnschrift"
                FontSize="36"
                Foreground="White"
                MouseDown="TextBoxPS_MouseDown" />
            <Image
                x:Name="ImgUrlCPU"
                Grid.Column="1"
                Canvas.Left="794"
                Canvas.Top="352"
                Width="344"
                Height="163"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlGPU"
                Grid.Column="1"
                Canvas.Left="492"
                Canvas.Top="596"
                Width="256"
                Height="202"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlRAM"
                Grid.Column="1"
                Canvas.Left="1214"
                Canvas.Top="164"
                Width="384"
                Height="371"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlMB"
                Grid.Column="1"
                Canvas.Left="82"
                Canvas.Top="649"
                Width="368"
                Height="265"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlCC"
                Grid.Column="1"
                Canvas.Left="521"
                Canvas.Top="24"
                Width="315"
                Height="249"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlCase"
                Grid.Column="1"
                Canvas.Left="10"
                Canvas.Top="10"
                Width="368"
                Height="285"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlStorage"
                Grid.Column="1"
                Canvas.Left="1374"
                Canvas.Top="671"
                Width="496"
                Height="223"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.ZIndex="0" />
            <Image
                x:Name="ImgUrlPS"
                Grid.Column="1"
                Canvas.Left="118"
                Canvas.Top="326"
                Width="497"
                Height="205"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.ZIndex="0" />
            <Label
                x:Name="TextBoxTotalPrice"
                Canvas.Left="696"
                Canvas.Top="544"
                Width="518"
                Height="114"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#3F000000"
                Content="Total Price:"
                FontFamily="Bahnschrift"
                FontSize="36"
                Foreground="White" />
            <ComboBox
                x:Name="ComboBoxTotalPrice"
                Canvas.Left="1393"
                Canvas.Top="10"
                Width="201"
                Height="62"
                FontSize="36"
                SelectedIndex="0"
                SelectionChanged="ComboBoxTotalPrice_SelectionChanged">
                <ComboBoxItem Content="USD" />
                <ComboBoxItem Content="UAH" />
            </ComboBox>
            <Button
                x:Name="BackButton"
                Canvas.Left="1607"
                Canvas.Top="10"
                Width="313"
                Height="62"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#33FFFFFF"
                BorderBrush="Black"
                Click="BackButton_Click"
                Content="Back"
                FontSize="48" />
            <Button
                x:Name="SaveButton"
                Canvas.Left="1607"
                Canvas.Top="77"
                Width="313"
                Height="62"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#33FFFFFF"
                BorderBrush="Black"
                Click="SaveButton_Click"
                Content="Save"
                FontSize="48" />
            <Label
                x:Name="BuildNameLable"
                Canvas.Left="1205"
                Canvas.Top="978"
                Width="237"
                Height="92"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="#4CFFFFFF"
                Content="Enter Name"
                FontSize="40" />
            <TextBox
                x:Name="BuildNameTextBox"
                Canvas.Left="1442"
                Canvas.Top="978"
                Width="468"
                Height="92"
                FontSize="40"
                TextWrapping="Wrap" />
        </Canvas>
    </Canvas>
</main:ObservableUserControl>
