<main:ObservableUserControl
    x:Class="WPFApp.Pages.SavedBuildsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Pages"
    xmlns:main="clr-namespace:WPFApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1920"
    Height="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Background="#3FFFFFFF"
                Content="Name of Builds"
                FontSize="40" />

            <DataGrid
                Grid.Row="1"
                AutoGenerateColumns="False"
                Background="#7FF0F0F0"
                FontSize="50"
                ItemsSource="{Binding BuildList}"
                SelectedItem="{Binding SelectedBuild}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="810"
                        Binding="{Binding Name}"
                        Header="Name"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="810"
                        Binding="{Binding BuildTotalPrice}"
                        Header="Total Price"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel
            Grid.Column="1"
            Margin="0,0,50,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="250" />
                    <Setter Property="Height" Value="100" />
                    <Setter Property="FontSize" Value="48" />
                    <Setter Property="Background" Value="#33DDDDDD" />
                    <Setter Property="Margin" Value="0,40,0,0" />
                </Style>
            </StackPanel.Resources>
            <Button Command="{Binding DeleteCommand}" Content="Delete" />
            <Button Command="{Binding EditCommand}" Content="Edit" />
            <Button Command="{Binding ReturnCommand}" Content="Return" />
        </StackPanel>
    </Grid>
</main:ObservableUserControl>
